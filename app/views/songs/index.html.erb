<header class="bg-gray-800 text-white p-4">
  <div class="container mx-auto">
    <h1 class="text-3xl font-bold">Songs</h1>
  </div>
</header>

<div class="container mx-auto p-custom-padding">
  <%= form_with url: songs_path, method: :get, local: true, class: "mb-4" do |form| %>
    <%= form.text_field :query, placeholder: "Search for songs", class: "p-2 border border-gray-300 rounded-lg w-full" %>
    <%= form.submit "Search", class: "bg-primary text-white px-4 py-2 rounded-lg hover:bg-blue-700" %>
  <% end %>

  <div id="songs">
    <% @songs.each do |song| %>
      <div class="bg-white shadow-md rounded-lg p-4 mb-4">
        <div class="text-xl font-semibold mb-2">
          <%= link_to song.name, song %>
        </div>
        <div class="text-gray-700">
          <%= render song %>
          <p>
            <%= link_to "Show this song", song, class: "bg-secondary text-white px-4 py-2 rounded-lg hover:bg-orange-700" %>
          </p>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to "New song", new_song_path, class: "bg-primary text-white px-4 py-2 rounded-lg hover:bg-blue-700" %>
</div>

<footer class="bg-gray-800 text-white p-4 mt-8 text-center">
  <div class="container mx-auto">
    &copy; <%= Time.now.year %> kglw.net
  </div>
</footer>
